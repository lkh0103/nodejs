<div class="col-md-9">
    <h2>Chỉnh Sửa Danh Mục</h2>
    <hr>
    <form id="formCategory">
      <input type="hidden" id="funct" value="2">
        <div class="form-group">
          <label for="name">Tên:</label>
          <input type="text" class="form-control" id="name" value="<%=data.name%>">
          <span class="err_name"></span>
        </div>
        <div class="form-group">
          <label for="parents">Cha:</label>
          <select id="parents" class="form-control">
              <option value="">-Chọn-</option>
              <%-parents%>
          </select>
        </div>
        <div class="form-group">
            <label for="name">Nội Dung:</label>
            <textarea id="content" rows="5" class="form-control"><%=data.content%></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Lưu lại</button>
        <a href="category/index" class="btn btn-dark">Thoát</a>
    </form>
    <br>
</div>